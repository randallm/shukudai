<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ManageSchoolClassActivity" >

    <Spinner
        android:id="@+id/manageClassSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="bottom" />

    <Button
        android:id="@+id/manageClassEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manageClassSpinner"
        android:onClick="editClass"
        android:text="Edit Class Name" />

    <Button
        android:id="@+id/manageClassDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manageClassEdit"
        android:onClick="deleteClass"
        android:text="Delete Class" />

    <Button
        android:id="@+id/manageClassDeletePhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manageClassDelete"
        android:onClick="deletePhotos"
        android:text="Clear Archived Photos" />

</RelativeLayout>